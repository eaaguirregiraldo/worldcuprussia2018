<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Group</th>
      <th>Flag</th>
      <th>Points</th>
      <th>Actual phase</th>
      <th>Gf</th>
      <th>Gc</th>
      <th>Gd</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to( image_tag(team["flag"], height: '50', width: '50') , team['flag']) %></td>
        <td><%= team.name %></td>
        <td><%= team.group %></td>        
        <td><%= team.points %></td>
        <td><%= team.actual_phase %></td>
        <td><%= team.gf %></td>
        <td><%= team.gc %></td>
        <td><%= team.gd %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

